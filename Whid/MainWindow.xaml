<Window x:Class="Whid.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Whid"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition MaxHeight="40" MinHeight="40"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Row="0"
              Grid.Column="0"
              Margin="5,0">
            <Button Content="&lt;"
                    Visibility="{Binding BiggerSummaryTypeVisibility, Mode=OneWay}"
                    Click="ShowBiggerSummaries"
                    FontSize="14"
                    Padding="10,2"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Left"/>
            <Label Content="{Binding MainSummaryType.Name, Mode=OneWay}"
                   HorizontalAlignment="Center"/>
        </Grid>
        <Grid Grid.Row="0"
              Grid.Column="1"
              Margin="5,0">
            <Button Content="&gt;"
                    Visibility="{Binding SmallerSummaryTypeVisibility, Mode=OneWay}"
                    Click="ShowSmallerSummaries"
                    FontSize="14"
                    Padding="10,2"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Right"/>
            <Label Content="{Binding NextSummaryType.Name, Mode=OneWay}"
                   HorizontalAlignment="Center"/>
        </Grid>
        <ListView x:Name="SummaryListView"
                  Grid.Row="1" Grid.Column="0"
                  HorizontalContentAlignment="Stretch"
                  ItemsSource="{Binding Summaries}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border BorderThickness="1"
                            BorderBrush="Gray">
                        <StackPanel Orientation="Vertical"
                                    Margin="4">
                            <Grid>
                                <TextBlock Text="{Binding Period.FormatString}"/>
                                <Button Content="..."
                                        Padding="4,0"
                                        Visibility="Visible"
                                        HorizontalAlignment="Right"/>
                            </Grid>
                            <TextBlock Text="{Binding Content}"/>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <ListView x:Name="SummarizedSummaryListView"
                  Grid.Row="1" Grid.Column="1"
                  HorizontalContentAlignment="Stretch"
                  ItemsSource="{Binding SummarizedSummaries}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border BorderThickness="1"
                            BorderBrush="Gray">
                        <StackPanel Orientation="Vertical"
                                    Margin="2">
                            <TextBlock Text="{Binding Period.FormatString}"/>
                            <TextBlock Text="{Binding Content}"/>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Window>
