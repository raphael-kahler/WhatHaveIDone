<Application x:Class="Whid.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources\ColorSchemes\ColorsLightGreenIndigo.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <SolidColorBrush x:Key="bg_primary" Color="{DynamicResource color_primary}"/>
            <SolidColorBrush x:Key="bg_primary_dark" Color="{DynamicResource color_primary_dark}"/>
            <SolidColorBrush x:Key="bg_primary_light" Color="{DynamicResource color_primary_light}"/>
            <SolidColorBrush x:Key="bg_accent" Color="{DynamicResource color_accent}"/>
            <SolidColorBrush x:Key="on_primary" Color="{DynamicResource color_on_primary}"/>
            <SolidColorBrush x:Key="on_primary_dark" Color="{DynamicResource color_on_primary_dark}"/>
            <SolidColorBrush x:Key="on_primary_light" Color="{DynamicResource color_on_primary_light}"/>
            <SolidColorBrush x:Key="on_accent" Color="{DynamicResource color_on_accent}"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
